{
  "name": "increment-protocol",
  "version": "0.2.0",
  "description": "Exchange rate protocol",
  "engines": {
    "node": "16.13.1"
  },
  "repository": "https://github.com/Increment-Finance/increment-protocol",
  "author": "increment",
  "license": "AGPL-3.0-or-later",
  "devDependencies": {
    "@aave/protocol-v2": "^1.0.1",
    "@chainlink/contracts": "^0.2.1",
    "@nomiclabs/hardhat-ethers": "npm:hardhat-deploy-ethers@^0.3.0-beta.10",
    "@nomiclabs/hardhat-etherscan": "^2.1.4",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "^4.2.0",
    "@primitivefi/hardhat-dodoc": "^0.1.3",
    "@typechain/ethers-v5": "^8.0.5",
    "@typechain/hardhat": "^3.0.0",
    "@types/chai": "^4.2.18",
    "@types/mocha": "^8.0.2",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "@uniswap/v2-periphery": "^1.1.0-beta.0",
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "dotenv": "^10.0.0",
    "dotenv-expand": "^5.1.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.2",
    "fs-extra": "^10.0.0",
    "hardhat": "^2.3.3",
    "hardhat-contract-sizer": "^2.4.0",
    "hardhat-deploy": "^0.9.14",
    "hardhat-gas-reporter": "^1.0.4",
    "hardhat-spdx-license-identifier": "^2.0.3",
    "husky": "^7.0.4",
    "mocha": "^9.0.0",
    "prb-math": "^2.2.0",
    "prettier": "^2.3.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.15",
    "ts-generator": "^0.1.1",
    "ts-node": "^10.0.0",
    "typechain": "^6.0.5",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "prepare": "node ./.setup.js && hardhat typechain && husky install & pip3 install slither-analyzer",
    "lint": "eslint \"**/*.{js,ts}\" && solhint src/**/*.sol",
    "lint:fix": "eslint --fix \"**/*.{js,ts}\" && solhint --fix src/**/*.sol",
    "format": "prettier --check \"**/*.{ts,js,sol}\"",
    "format:fix": "prettier --write \"**/*.{ts,js,sol}\"",
    "clean": "hardhat clean",
    "compile": "hardhat compile",
    "void:deploy": "hardhat deploy",
    "test": "yarn test:unit && yarn test:integration && yarn slither",
    "test:integration": "yarn compile && cross-env HARDHAT_FORK=mainnet HARDHAT_COMPILE=true mocha 'test/integration/*.test.ts'",
    "test:unit": "yarn compile && cross-env mocha --bail --recursive 'test/unit/*.test.ts'",
    "test:debug": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_FORK=mainnet HARDHAT_COMPILE=true hardhat test",
    "gas": "cross-env REPORT_GAS=true hardhat test",
    "coverage": "cross-env HARDHAT_DEPLOY_FIXTURE=true HARDHAT_FORK=mainnet hardhat coverage",
    "verify": "yarn run compile && yarn run format && yarn run lint && yarn run test",
    "slither": "./slither.sh",
    "dev": "hardhat node --watch --export contractsInfo.json",
    "local:dev": "hardhat --network localhost deploy --watch",
    "execute": "node ./_scripts.js run",
    "deploy": "node ./_scripts.js deploy",
    "export": "node ./_scripts.js export",
    "fork:execute": "node ./_scripts.js fork:run",
    "fork:deploy": "node ./_scripts.js fork:deploy",
    "prefork:dev": "rm -rf deployments/mainnet/* deployments/localhost/*",
    "fork:dev": "node ./_scripts.js fork:dev",
    "fork:node": "node ./_scripts.js fork:node",
    "fork:test": "node ./_scripts.js fork:test",
    "etherscan:verify": "yarn hardhat etherscan-verify --network kovan",
    "deployment:kovan": "yarn deploy kovan && yarn hardhat run scripts/scenario-testnet.ts --network kovan && yarn hardhat etherscan-verify --network kovan",
    "contract:size": "echo 'maximum contract size is 24KB' && yarn run hardhat size-contracts",
    "compile:vyper": "rm ./typechain -r & yarn hardhat clean && yarn hardhat compile-vyper --directory contracts-vyper",
    "prerun:scenario": "mkdir deployments/mainnet || cp -r deployments/localhost/* deployments/mainnet",
    "run:scenario": "hardhat run scripts/scenario.ts --network localhost"
  }
}
